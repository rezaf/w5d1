<h1>Login</h1>

<form action="<%= session_url %>" method="POST">
  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">
  
  <label>
    username
    <input type="text"
           name="user[username]">
  </label>
  
  <label>
    password
    <input type="password"
           name="user[password]">
  </label>
  
  <input type="submit" value="Login">

</form>